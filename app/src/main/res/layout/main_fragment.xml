<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mainFragment.MainFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clean_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cust_fio"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/delete_forever_24"
        app:borderWidth="0dp"
        app:fabSize="mini"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toStartOf="@+id/run_but"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/run_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cust_green"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_baseline_play_circle_24"
        app:borderWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.commandnameexception.lasersaber.schemeView.SimpleSchemeView
        android:id="@+id/simple_scheme_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="127dp">


    </com.commandnameexception.lasersaber.schemeView.SimpleSchemeView>

</androidx.constraintlayout.widget.ConstraintLayout>