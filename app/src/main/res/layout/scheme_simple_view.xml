<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/top_wire"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/battery"
            app:layout_constraintEnd_toStartOf="@id/right_wire"
            app:layout_constraintStart_toEndOf="@id/battery"
            app:layout_constraintTop_toTopOf="@id/battery" />

        <View
            android:id="@+id/bottom_wire"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/light"
            app:layout_constraintEnd_toStartOf="@id/right_wire"
            app:layout_constraintStart_toEndOf="@+id/light"
            app:layout_constraintTop_toTopOf="@+id/light" />

        <View
            android:id="@+id/left_wire"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@id/light"
            app:layout_constraintEnd_toEndOf="@id/battery"
            app:layout_constraintStart_toStartOf="@id/battery"
            app:layout_constraintTop_toBottomOf="@+id/battery" />

        <View
            android:id="@+id/right_wire"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@id/bottom_wire"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_wire" />

        <ImageButton
            android:id="@+id/battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_baseline_battery_charging_full_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_light_mode_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/plus_cleat_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="58dp"
            android:src="@drawable/outline_add_circle_24"
            app:layout_constraintBottom_toBottomOf="@+id/battery"
            app:layout_constraintEnd_toEndOf="@+id/battery"
            app:layout_constraintStart_toEndOf="@+id/battery"
            app:layout_constraintTop_toTopOf="@+id/battery" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>